&savelist
  Nphases=16 ! 32
/

&endlist
  time_max=0.2d0 ! in orb. periods
/

&star
  Rstar=20.d0 ! in solar radii
/

&wind
  beta=0.5d0
  vinf=1.d3 ! in km/s
  Mdot=5.E-10 ! in solar mass per year
/

&clumps
  Ncl0          = 0 ! 00000 ! Initial # of clumps
  clump_mass    = 1.d18 ! in CGS
  clump_rad     = 0.2d0 ! size @ 2 stellar radii, in stellar radii
  mass_fraction = 1.d-2 ! fraction of the total mass trapped in the clumps
  dist_max_cl   = 10.d0 ! distance from stellar center, in stellar radii, beyond which clumps are deleted
  do_merge      = F
  ! type_merge    = 'volume_x_2'
  rad_evol      = 'lorenzo'
/

&orbit
  a   = 1.8d0
  Per = 9.d0 ! in days
/

&LOS
  inclnsn = 45.d0 ! in degrees, 90 is edge-on
  omega_i = 0.d0 ! not defined for circular orbits
/

&numerics
  deterministic=T
  rlvnt_clumps =T
/
