&savelist
  Nsave=100 ! how many snapshots per orbit do you want to save for plotting?
  Nsave_NH_lc=10 ! how many NH light curves do you want to save?
  ! restart_indx=0
/

&endlist
  time_max=3.d0 ! in orb. periods
/

&star
  Rstar=20.d0 ! in solar radii
/

&wind
  beta=0.5d0
  vinf=6.d2  ! in km/s
  Mdot=1.E-6 ! in solar mass per year
/

&clumps
  clump_mass    = 1.d19  ! in CGS
  clump_rad     = 0.1d0 ! size @ 2 stellar radii, in stellar radii
  mass_fraction = 1.d0   ! fraction of the total mass trapped in the clumps
  dist_max_cl   = 10.d0  ! distance from stellar center, in stellar radii, beyond which clumps are deleted
  do_merge      = F
  ! type_merge    = 'volume_x_2'
  rad_evol      = 'lorenzo'
/

&orbit
  a      = 1.8d0 ! 2.4d0 ! in stellar radii units
  Per    = 9.d0 ! 5.6d0 ! in days
  NSspin = 300.d0 ! in seconds
  dt_NH_lc=1.d0 ! which time step for NH light curves (in sec)?
/

&LOS
  inclnsn = 87.d0 ! 27.d0 ! in degrees, 90 is edge-on
  omega_i =  0.d0 ! not defined for circular orbits
/

&numerics
  deterministic=T
  init_only    =F
  plot_cl_only =F
  NH_lc_only   =T
/
