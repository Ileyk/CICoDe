&savelist
  Nsave=100 ! how many snapshots per orbit do you want to save for plotting?
  ! restart_indx=0
/

&endlist
  time_max=1.d0 ! in orb. periods
/

&star
  Rstar=20.d0 ! in solar radii
/

&wind
  beta=0.5d0
  vinf=1.d3  ! in km/s
  Mdot=1.E-8 ! in solar mass per year
/

&clumps
  clump_mass    = 1.d17  ! in CGS
  clump_rad     = 0.05d0 ! size @ 2 stellar radii, in stellar radii
  mass_fraction = 1.d0   ! fraction of the total mass trapped in the clumps
  dist_max_cl   = 10.d0  ! distance from stellar center, in stellar radii, beyond which clumps are deleted
  do_merge      = F
  ! type_merge    = 'volume_x_2'
  rad_evol      = 'lorenzo'
/

&orbit
  a      = 2.4d0 ! 1.8d0 ! in stellar radii units
  Per    = 5.6d0 ! 9.d0 ! in days
  NSspin = 300.d0 ! in seconds
/

&LOS
  inclnsn = 27.d0 ! 87.d0 ! in degrees, 90 is edge-on
  omega_i =  0.d0 ! not defined for circular orbits
/

&numerics
  deterministic=T
  init_only    =F
  plot_cl_only =F
/
